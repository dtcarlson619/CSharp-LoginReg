@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1 class="display-4 text-primary">Register to this Cool Site!</h1>
</div>
<div class="row">
    <div class="border border-dark p-3 m-3 col-6 d-inline">
        <h2 class="text-primary">Register</h2>
        <form method="POST" asp-action="Register" asp-controller="Home">
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input class="form-control" type="text" asp-for="FirstName">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input class="form-control" type="text" asp-for="LastName">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input class="form-control" type="text" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" type="password" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confirm">Confirm Password:</label>
                <input class="form-control" type="password" asp-for="Confirm">
                <span class="text-danger" asp-validation-for="Confirm"></span>
            </div>
            <button class="btn btn-primary" type="submit">Sign up Now</button>
        </form>
    </div>
    <div class="border border-dark p-3 m-3 col-5 d-inline" style="height:40%;">
        <h2 class="text-primary">Login</h2>
        <form method="POST" asp-action="Login" asp-controller="Home">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input class="form-control" type="text" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" type="password" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
</div>